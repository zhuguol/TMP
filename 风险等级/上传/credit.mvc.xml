<?xml version="1.0"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<!--EAST 批量导入控制器  -->
	<bean id="batchImportController" class="com.huateng.excel.imp.BatchImportController">
		<property name="multipartResolver" ref="apmMultipartResolver"></property>
		<property name="result" value="/fpages/east/ftl/message.jsp"/>
		<property name="methodNameResolver">
			<bean class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
				<property name="mappings">
					<props>
						<prop key="/batchImport/importGMOZIP.spring">importGMOZIP</prop>
						<prop key="/batchImport/importFINZIP.spring">importFINZIP</prop>
						<prop key="/batchImport/importXLSX.spring">importXLSX</prop>
						<prop key="/batchImport/uploadFilsesImport.spring">uploadFilsesImport</prop>	
						<prop key="/batchImport/importTEST.spring">importTEST</prop>	
					</props>
				</property>
			</bean>
		</property>
	</bean>
	
	<!--300号文 批量导入控制器  -->
	<bean id="batchXLSImportController" class="com.huateng.excel.imp.BatchXLSImportController">
		<property name="multipartResolver" ref="apmMultipartResolver"></property>
		<property name="result" value="/fpages/export/ftl/message.jsp"/>
		<property name="methodNameResolver">
			<bean class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
				<property name="mappings">
					<props>
						<prop key="/batchXLSImport/importXLS.spring">importXLS</prop>
						<prop key="/batchXLSImport/importXLSForRRB.spring">importXLSForRRB</prop>
						<!-- 300号文文件上传 -->
						<prop key="/batchXLSImport/uploadFilses300.spring">uploadFilses300</prop>	
					</props>
				</property>
			</bean>
		</property>
	</bean>  
	
	<!-- 地址映射 -->
	<bean id="apmUrlMapping"
		  class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		  <property name="mappings">
			<props>
				<prop key="/batchImport/*">batchImportController</prop>
				<prop key="/batchXLSImport/*">batchXLSImportController</prop>
			</props>
		 </property>
	</bean>
	
	<!--  SSVB 回执文件上传  20160913 -->
	<bean id="batchPDFImportController" class="com.huateng.excel.imp.BatchPDFImportController">
		<property name="multipartResolver" ref="apmMultipartResolver"></property>
		<property name="result" value="/fpages/fayuan/jsp/message.jsp"/>
		<property name="methodNameResolver">
			<bean class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
				<property name="mappings">
					<props>						
						<prop key="/batchPDFImport/uploadPDF.spring">uploadPDFImport</prop>
					</props>
				</property>
			</bean>
		</property>
	</bean> 
	<!--  end  20160913 -->
	
	<!-- 文件上传控制 -->
	<bean id="apmMultipartResolver"
		  class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		  <property name="maxUploadSize">
			<value>104857600</value>
		 </property>
		 <property name="maxInMemorySize">
			<value>4096</value>
		 </property>
	</bean>
	
</beans>	

