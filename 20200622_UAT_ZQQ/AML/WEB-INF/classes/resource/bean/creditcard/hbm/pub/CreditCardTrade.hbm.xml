<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.huateng.hsbc.creditcard.bean">
	<class
		name="CreditCardTrade"
		table="CREDIT_CARD_TRADE"
	>
		<meta attribute="sync-DAO">false</meta>
		<id name="id" type="string" column="REC_ID">
		</id>

		<property name="custNo"               column="CUST_NO"                 type="string" not-null="false" length="52"     />
		<property name="creditCard"           column="CREDIT_CARD"             type="string" not-null="false" length="52"     />
		<property name="tradeDate"            column="TRADE_DATE"              type="string" not-null="false" length="8"      />
		<property name="tradeTime"            column="TRADE_TIME"              type="string" not-null="false" length="6"      />
		<property name="tradeCur"             column="TRADE_CUR"               type="string" not-null="false" length="3"      />
		<property name="tradeAmt"             column="TRADE_AMT"               type="big_decimal" not-null="false" length="20"   />
		<property name="tradeCity"            column="TRADE_CITY"              type="string" not-null="false" length="52"     />
		<property name="mccCode"              column="MCC_CODE"                type="string" not-null="false" length="52"     />
		<property name="merchantName"         column="MERCHANT_NAME"           type="string" not-null="false" length="52"     />
		<property name="merchantId"           column="MERCHANT_ID"             type="string" not-null="false" length="52"     />
		<property name="terminalId"           column="TERMINAL_ID"             type="string" not-null="false" length="52"     />
		<property name="posEntrymode"         column="POS_ENTRY_MODE"          type="string" not-null="false" length="52"     />
		<property name="applePay"             column="APPLE_PAY"               type="string" not-null="false" length="52"     />
		<property name="alarmNo"              column="ALARM_NO"                type="string" not-null="false" length="52"     />
		<property name="rsv1"              column="RSV1"                type="string" not-null="false" length="10"  />
		<property name="rsv2"              column="RSV2"                type="string" not-null="false" length="10"  />
		<property name="rsv3"              column="RSV3"                type="string" not-null="false" length="50"  />
		<property name="rsv4"              column="RSV4"                type="string" not-null="false" length="50"  />
		<property name="rsv5"              column="RSV5"                type="string" not-null="false" length="500" />
		<property name="rsv6"              column="RSV6"                type="string" not-null="false" length="500" />
		
	</class>	
</hibernate-mapping>