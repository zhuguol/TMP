			<!--<value>jdbc:oracle:thin:@//cnrac48-scan.gss5.hk.hsbc:2001/rrbaml.cn.hsbc</value>--> 	 <!-- RRB_AML_UAT -->  
		    <!--<value>jdbc:oracle:thin:@//cnrac59-scan.gss5.hk.hsbc:2001/pcnhbcn.cn.hsbc</value>-->	 <!-- HBCN_AML_PRO_生产 -->  
		    <!--<value>jdbc:oracle:thin:@//cnrac59-scan.gss5.hk.hsbc:2001/pcnrrba1.cn.hsbc</value>--> 	 <!-- RRBAML_PRO_生产 -->  
		</property>
		<property name="user">
		    <value>AML</value>             <!-- 本地 -->
